@model BookStore.Models.Domain.Author
@{
}

<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<h3>Add Author</h3>
			<form asp-action="Add" method="post">
				<div class="form-group">
					<label asp-for="first_name">Author First Name *</label>
					<input type="text" class="form-control" asp-for="first_name"/>
					<label asp-for="last_name">Author Last Name *</label>
					<input type="text" class="form-control" asp-for="last_name" />
					<span asp-validation-for="first_name" class="text-danger"></span>
					<span asp-validation-for="last_name" class="text-danger"></span>
				</div>

				@if(TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
				<div class="form-group pt-3">
					<button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
					<a href="/Author/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
				</div>

			</form>
		</div>
	</div>
</div>
