@model IEnumerable<BookStore.Models.Domain.Author>
@{
}

<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<a class="btn btn-dark" href="/Author/Add">Add More</a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<h3>Authors</h3>
			
			<table class="table table-stripped table-bordered table-dark">
				<thead>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model)
					{
					<tr>
						<td>@item.first_name</td>
						<td>@item.last_name</td>
						<td>
								<a class="btn btn-success" href="/Author/Update?id=@item.id_author"> Edit</a>
								<a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete?id=@item.id_author"> Delete</a>
						</td>
					</tr>	
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
