@model BookStore.Models.Domain.Book
@{
}

<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<h3>Choose Genre</h3>
			<form asp-action="SetPopularity" method="post">
				<div class="form-group">
					<label asp-for="name_genre">Genre *</label>
					<select asp-for="name_genre" asp-items="ViewBag.GenreList" class="form-control">
						<option value="">--Select--</option>
					</select>
					<span asp-validation-for="name_genre" class="text-danger"></span>
				</div>

				@if(TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
				<div class="form-group pt-3">
					<button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Set</button>
					<a href="/Book/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
				</div>

			</form>
		</div>
	</div>
</div>
